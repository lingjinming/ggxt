<!--index.wxml-->
<view class="container">
  <view class='ad-wrap'>
    <image src='{{indexImgBg}}'></image>
    <text class='title'>感觉统合综合评测</text>
    <text class='type'>{{content}}</text>
    <text class='price'>¥{{current_price}}</text>
  </view>
  <view style="height:720rpx" class='info-txt'>
    <rich-text nodes='{{detail}}'></rich-text>
  </view>
  
  <view class='yellow-txt absolute'>
      ¥{{current_price}}<text class='gray-txt'>¥{{original_price}}</text>
      <button class='btn red-big-btn' bindtap='buynow'>{{current_price>0?'立即购买':'免费测试'}}</button>
  </view>
</view>