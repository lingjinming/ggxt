/* pages/trainvideo/trainvideo.wxss */
@import '../trainPlan/trainPlan.wxss';
video{
  width:100%;
  height: 210px;
  display: block;
  margin-top: 40rpx;
}
.currentTargetInfoBox{
  display: flex;
  justify-content: space-around;
}
.currentTargetInfoBox text{
height:50rpx;
line-height:50rpx;
border:1px solid #ccc;
display:flex;
align-items:center;
justify-content:center;
flex:1;
border-top:0;
}
.currentTargetInfoBox text:nth-child(1){
  flex: 2;
}
.currentTargetInfoBox text:nth-child(2){
  border-left: 0;
  border-right: 0;
}
.fs40{
  display: inline-block;
}
.result-head{
  text-align: center;
  height: 160rpx !important;
  line-height: 160rpx;
  padding-left: 0;
}
.inner-table-body text:nth-child(2) {
  flex: 1;
  border-left: none;
  border-right: 1px solid #ccc;
}
.currentTargetInfoBox text:nth-child(1) {
flex:1
}
.relative{
  position: relative;

}
.img {
  width: 100%;
  height: 100%;
}
.play{
  background: rgba(140, 255, 240, 0.5);
width:670rpx;
height:420rpx;
display:block;
margin-top:40rpx;
left:40rpx;
top:268rpx;
position: absolute
}
image{
  width: 80rpx;
  height: 80rpx;
  left: calc(50% - 40rpx);
  top: calc(50% - 40rpx)
}
cover-view {
  height: 100%;
  width: 100%;
  background: rgba(139, 185, 245, 0.5)
}
cover-image{
  width: 100%;
  height: 100%;
}
cover-image{
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  top: calc(50% - 60rpx);
  left: calc(50% - 60rpx)
}