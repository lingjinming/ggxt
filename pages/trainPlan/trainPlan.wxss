/* pages/trainPlan/trainPlan.wxss */

.container {
  font-size: 24rpx;
  color: #fff;
}

.content{
  margin-bottom: 0;
}
.result-head {
  padding-left: 40rpx;
}

.inner-table-head {
  height: 88rpx;
  background: #29c6b2;
  padding-left: 40rpx;
}

.inner-table-head > text, .inner-table-head view {
  line-height: 22px;
  color: #fff;
}

.infowrap text {
  margin-right: 80rpx;
  font-size: 26rpx;
}

.plantitle {
  text-align: center;
}

.flex-wrap {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #94e3d9;
  height: 70rpx;
  line-height: 70rpx;
  margin-bottom: 20rpx;
}

picker {
  height: 100%;
}

.table-wrap {
  position: relative;
  margin: 0 auto;
  box-sizing: border-box;
  padding: 40rpx;
  margin-bottom: 40rpx;
}

.inner-table-head {
  height: 90rpx;
  background: #29c6b2;
}

.inner-table {
  color: #595757;
}

.inner-table-body {
  justify-content: space-around;
  border: none;
  margin-bottom: 0;
}

.inner-table-body text {
  text-align: center;
  flex: 1;
  border: 1px solid #ccc;
  border-top: none;
}

.inner-table-body text:nth-child(2){
  border-left: none;
  border-right: none;
}

.inner-table-body text:nth-child(3) {
    border-right: none;
}
.textalign-c text {
  color: #595757;
  font-size: 30rpx;
  margin-bottom: 36rpx;
  display: block;
}

scroll-view {
  height: 70vh;
}
