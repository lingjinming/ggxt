<!--pages/result/result.wxml-->
<view class='container border-top'>
  <view class='result-head'>
    <text class='fs40'>我的感统训练计划</text>
     <!-- <view class='infowrap'> 
        <text>姓名 : {{user.name}}</text>
        <text>年龄 : {{user.age}}岁</text>
        <text>性别 : {{user.sex}}</text>
      </view>  -->
  </view>
  <scroll-view enable-back-to-top="true" scroll-y="true">
    <view class='content'>
      <view class='plantitle fs40'>{{title}}</view>
      <view class='flex-wrap fs26'>
        <text>上课时长:{{duration}}</text>
        <text>频次:{{times}}</text>
        <text>总课时:{{totleTimes}}</text>
      </view>
      <view class='inner-con'>{{con}}</view>
    </view>
    <view class='table-wrap'>
      <view class='inner-table'>
        <view class='inner-table-head'>
          <text>课程安排</text>
          <view>
            目的 : {{con}}
          </view>
        </view>
        <view class='inner-table-body flex-wrap'>
          <text>内容</text>
          <text>次数</text>
          <!-- <text>组数</text> -->
          <text>时间(分钟)</text>
        </view>
        
        <view wx:for="{{trainingCon}}" wx:for-index="idx" wx:for-item="project" wx:key="idx" class='inner-table-body flex-wrap' bindtap='showVideo' data-projectVideoUrl="{{project.video_url}}" data-projectName="{{project.projectName}}" data-projectTimes="{{project.projectTimes}}" data-projectMaxTime="{{project.projectMaxTime}}" data-con="{{con}}">
          <text>{{project.projectName}}</text>
          <text>{{project.projectTimes}}</text>
          <!-- <text>{{project.projectGroup}}</text> -->
          <text>{{project.projectMaxTime}}</text>
        </view>
      </view>
    </view>
    <view class='content'>
      <view class='flex-wrap fs26'>
        <text>训练课程安排注解</text>
      </view>
      <view class='inner-con'>{{con}}</view>
    </view>
  </scroll-view>
  <view class='textalign-c'>
  <text>计划制定时间 : {{time}}</text>
    <button class='green-btn2' bindtap='backToResul'>返回测评结果</button>
  </view>
</view>