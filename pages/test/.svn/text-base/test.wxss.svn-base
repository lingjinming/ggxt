/* pages/test/test.wxss */

.options-wrap {
  display: flex;
  position: relative;
  left: 0vw;
  width: 100vw;
  /* transition: left 0.3s linear; */
}

.option-box {
  position: relative;
  color: #fff;
  flex: 100%;
  width: 100vw;
  height: 99vh;
}

.option-title {
  font-size: 38rpx;
  width: 614rpx;
  margin: 0 auto;
  margin-top: 74rpx;
  margin-bottom: 20rpx;
}

.normal {
  display: block;
  width: 614rpx;
  height: 85rpx;
  line-height: 85rpx;
  border-radius: 85rpx;
  border: 1px solid #fff;
  margin: 40rpx auto;
  font-size: 30rpx;
}
label radio {
opacity:1;
margin-left:24rpx;
margin-right:10rpx;
position:relative;
top:-2rpx;

}
