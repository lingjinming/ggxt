.group {
left:0;
bottom:25vh;
height:70rpx;
line-height:70rpx;
text-indent:40rpx;
font-size:35rpx;
border-top-right-radius:70rpx;
border-bottom-right-radius:70rpx;
background-color:#00c1b0;
display:inline-block;
text-align:left;
padding-right:40rpx;

}

.next-test {
  position: absolute;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #00c1b0;
  font-size: 30rpx;
}

label .on{
  border: 2px solid #00c1b0
}